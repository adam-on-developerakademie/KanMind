# Django Environment Variables - Beispiel-Konfiguration
# Kopieren Sie diese Datei nach .env und passen Sie die Werte an

# SECURITY WARNING: Generieren Sie einen sicheren SECRET_KEY f端r die Produktion
# Verwenden Sie: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# SECURITY WARNING: Setzen Sie DEBUG=False in der Produktion
DEBUG=True

# Erlaubte Hosts (kommagetrennt, ohne Leerzeichen)  
# F端r Entwicklung: localhost,127.0.0.1
# F端r Produktion: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_NAME=db.sqlite3
DATABASE_ENGINE=django.db.backends.sqlite3

# CORS Configuration (nur f端r Entwicklung True)
CORS_ALLOW_ALL_ORIGINS=True

# Internationalization
LANGUAGE_CODE=de-de
TIME_ZONE=Europe/Berlin