# Django Environment Variables - Example Configuration
# Copy this file to .env and adjust the values

# SECURITY WARNING: Generate a secure SECRET_KEY for production
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# SECURITY WARNING: Set DEBUG=False in production
DEBUG=True

# Allowed hosts (comma-separated, no spaces)  
# For development: localhost,127.0.0.1
# For production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_NAME=db.sqlite3
DATABASE_ENGINE=django.db.backends.sqlite3

# CORS Configuration (only True for development)
CORS_ALLOW_ALL_ORIGINS=True

# Internationalization
LANGUAGE_CODE=en-en
TIME_ZONE=GMT